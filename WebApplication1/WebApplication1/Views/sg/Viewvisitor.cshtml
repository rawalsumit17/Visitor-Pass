@model WebApplication1.Models.visitor

@{
    ViewBag.Title = "Viewvisitor";
    Layout = "~/Views/sgLayoutPage1.cshtml";
}
<script type="text/javascript" src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js'></script>


@*<h2 class="main-title-w3layouts mb-2 text-center">Tables</h2>*@
<!--// main-heading -->
<!-- Tables content -->
<style>
    body {
        background-color: lightgray;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .bg-page {
        background-color: rgba(0, 0, 0, 0.6); /* Adjust the background color opacity */
    }
</style>


<section class="tables-section">
    <!-- table1 -->
    
    <div class="outer-w3-agile mt-3" style=" background-color: lightgray;">
        <h4 class="tittle-w3-agileits mb-4"  style="color:black">Visitor Details</h4>

        <div class="row">
            <div class="col-md-6">
                <form method="post" action="/sg/searchbyname" enctype="multipart/form-data">

                    <label for="inputtext">Search by name:</label>

                    <input style="border-radius:4px; border-color:transparent;" type="text" name="name" />
                    <button class="btn btn-primary error-w3l-btn mt-sm-0 mt-1 px-2" style="align-items: center; height: 37px " type="submit" name="submit">show</button>


                </form>
            </div>


            <div class="col-md-6" style="width:auto; height:auto; display:flex; justify-content:end">

                <form method="post" action="/sg/searchbydate" enctype="multipart/form-data">

                    <label for="inputtext"> Search by date:</label>

                    <input style="border-radius:4px; border-color:transparent;" type="date" name="v_date" />
                    <button class="btn btn-primary error-w3l-btn mt-sm-0 mt-1 px-2" style="align-items: center; height: 37px " type="submit" name="submit">show</button>


                </form>


            </div>
        </div>
        <br /><br />
        <div class="table-responsive">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone No</th>
                        <th scope="col">Date</th>
                        <th scope="col">In-Time</th>
                        <th scope="col">Out-Time</th>
                        <th scope="col">Address</th>

                        <th scope="col">Visitor Photo</th>
                        @*<th colspan ="3"> action </th>*@


                    </tr>
                </thead>
                @{ int count = 1;}

                @foreach (var item in Model.visitor_details)
                {

                    <tr>
                        <td>@count</td>
                        <td>@item.fn_name</td>
                        <td>@item.ln_name</td>
                        <td>@item.v_email</td>
                        <td>@item.v_phno</td>
                        <td>@item.v_date</td>
                        <td>@item.v_intime</td>
                        <td>@item.v_outtime</td>
                        <td>@item.v_address</td>

                        <td><img src="@Url.Content(item.v_photo)" height="90" width="90" /></td>
                        @*<td> <a class="btn btn-danger" href="@Url.Action("generateslip", "sg", routeValues: new { v_id = item.v_id })">generateslip</a></td>*@

                        @*@if (item.email_status == "1")
                        {
                                <td><h4 style="color:red;">Already send</h4></td>
                        }
                        else
                        {
                        <td> <a class="btn btn-danger" href="@Url.Action("sendnotification", "sg", routeValues: new { v_id = item.v_id })">sendnotification</a></td>

                        }*@

                    </tr>
                    count++;
                }

            </table>
            </div>
        </div>
</section>

