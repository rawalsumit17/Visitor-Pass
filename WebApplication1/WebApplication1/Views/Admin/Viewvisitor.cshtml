@model WebApplication1.Models.visitor

@{
    ViewBag.Title = "Viewvisitor";
    //  Layout = "~/Views/Admin.cshtml";
    Layout = "~/Views/AdminLayout.cshtml";
}
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<style>
    body {
        background-color: lightgray;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .bg-page {
        background-color: rgba(0, 0, 0, 0.6); /* Adjust the background color opacity */
    }
</style>
<script type="text/javascript" src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js'></script>


<!--// main-heading -->
<!-- Tables content -->
<section class="tables-section" style=" background-color: lightgray;">
  
        <!-- table1 -->
        <div class="outer-w3-agile mt-3" style=" background-color: lightgray;">
            <h4 class="tittle-w3-agileits mb-4">Visitor Details</h4>

            <div class="row" style="width:auto;">
                <div class="col-md-6 mb-3" style="width:auto;">
                    <form style="width:auto" method="post" action="/Admin/searchname" enctype="multipart/form-data">
                        <label for="inputtext">Search by name:</label>

                        <input type="text" name="name" required=""/>
                        <button class="btn btn-primary error-w3l-btn mt-sm-0 mt-1 px-2" style="align-items: center; height: 37px " type="submit" name="submit">show</button>


                    </form>
                </div>


                <div class="col-md-6 mb-3" style="width:auto; height:auto; display:flex; justify-content:end">

                    <form style="width:auto" method="post" action="/Admin/searchdate" enctype="multipart/form-data">

                        <label for="inputtext"> Search by date:</label>

                        <input type="date" name="v_date" required=""/>
                        <button class="btn btn-primary error-w3l-btn mt-sm-0 mt-1 px-2" style="align-items:center; height: 37px " type="submit" name="submit">show</button>


                    </form>


                </div>
            </div>

            <br /><br />



            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">First</th>
                            <th scope="col">Last</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone No</th>
                            <th scope="col">Date</th>
                            <th scope="col">In-Time</th>
                            <th scope="col">Out-Time</th>
                            <th scope="col">Address</th>

                            <th scope="col">Visitor Photo</th>
                        </tr>
                    </thead>
                    @{ int count = 1;}

                    @foreach (var item in Model.visitor_details)
                    {

                        <tr>
                            <td>@count</td>
                            <td>@item.fn_name</td>
                            <td>@item.ln_name</td>
                            <td>@item.v_email</td>
                            <td>@item.v_phno</td>
                            <td>@item.v_date</td>
                            <td>@item.v_intime</td>
                            <td>@item.v_outtime</td>
                            <td>@item.v_address</td>

                            <td><img src="@Url.Content(item.v_photo)" height="90" width="90" /></td>



                        </tr>
                        count++;
                    }

                </table>
            </div>
        </div>
</section>

